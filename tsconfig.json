{
    "compilerOptions": {
      "baseUrl": ".",
      "module": "commonjs",
      "target": "es5",
      "jsx": "react",
      "experimentalDecorators": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "skipDefaultLibCheck": true,
      "typeRoots": [
        "./node_modules/@types",
        "./node_modules/@microsoft"
      ],
      "lib": [
        "es5",
        "dom",
        "es2015.collection"
      ]
    },
    "exclude": [
      "bin",
      "node_modules"
    ]
  }